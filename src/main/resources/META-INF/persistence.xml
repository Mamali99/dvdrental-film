<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="my-persistence-unit" transaction-type="JTA">



        <properties>
            <!-- Spezifische Eigenschaften fÃ¼r Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Konfiguration der Verbindungsdaten -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:54321/dvdrentalfilm"/>
            <!--  <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://film-db:54321/dvdrentalfilm"/>-->
          <property name="jakarta.persistence.jdbc.user" value="postgres"/>
          <property name="jakarta.persistence.jdbc.password" value="trust"/>



          <!-- Weitere Eigenschaften... -->
        </properties>
    </persistence-unit>
</persistence>
